{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "all": true
      },
      "correctness": {
        "all": true,
        "noUndeclaredVariables": "off"
      },
      "style": {
        "all": true,
        "noDefaultExport": "off",
        "useExportType": "error",
        "useImportType": "error",
        "useTemplate": "off"
      },
      "suspicious": {
        "noAssignInExpressions": "off",
        "noExplicitAny": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "trailingComma": "none",
      "semicolons": "always"
    }
  },
  "overrides": [
    {
      "include": ["*.svelte"],
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedImports": "off",
            "noUnusedVariables": "off"
          },
          "style": {
            "useConst": "off"
          },
          "suspicious": {
            "noConfusingLabels": "off"
          }
        }
      }
    }
  ]
}
