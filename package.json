{
  "name": "svelte-swiper-matrix",
  "version": "0.6.0",
  "description": "A minimal swiper for Svelte",
  "keywords": [
    "swiper",
    "slider"
  ],
  "author": "Henry Aguila",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hankaguila/svelte-swiper-matrix"
  },
  "homepage": "https://github.com/hankaguila/svelte-swiper-matrix#readme",
  "bugs": "https://github.com/hankaguila/svelte-swiper-matrix/issues",
  "files": [
    "dist"
  ],
  "types": "./dist/index.d.ts",
  "svelte": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./swiper/*": null
  },
  "type": "module",
  "scripts": {
    "ts": "tsx",
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "dist": "svelte-kit sync && svelte-package && publint"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/package": "^2.3.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@types/node": "^20.11.16",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.2.2",
    "publint": "^0.2.7",
    "svelte-check": "^3.6.0",
    "tslib": "^2.4.1",
    "tsx": "^4.17.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.3"
  },
  "dependencies": {
    "material-symbols": "^0.17.1",
    "svelte": "^4.0.0"
  },
  "peerDependencies": {
    "svelte": "^4.0.0"
  }
}
